<html lang="de">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <meta name="generator" content="{{ eleventy.generator }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/blog-post.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/components/theme-switch.css' | url }}">
    <link rel="icon" href="/favicon.svg"/>

    {% include 'layouts/theme-preference.njk' %}

    {% for scr in imports %}
      {% set jsPath = '/js/' + scr + '.js' %}
      <script type="module" src="{{ jsPath | url }}"></script>
    {% endfor %}
  </head>
  <body {% if templateClass %} class="{{ templateClass }}"{% endif %}>
    {% include './theme-switch.njk' %}
    {% include './header.njk' %}

    <div class="glass"></div>
    <div class="bubble"></div>
    <div class="bubble-2"></div>

    <div class="main-wrapper">
      <main>
        {{ content | safe }}
      </main>
    </div>
    {% include 'layouts/footer.njk' %}
  </body>
</html>
