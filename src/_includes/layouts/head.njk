<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or metadata.title }}</title>
  <meta name="description" content="{{ description or metadata.description }}">
  <meta name="generator" content="{{ eleventy.generator }}">
  {% if env.environment == "production" %}
    <base href="/tony-spegel.com/">
  {% else %}
    <base href="/">
  {% endif %}

  <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
  <link rel="stylesheet" href="{{ '/css/components/theme-switch.css' | url }}">

  <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">

  <script type="module" src="{{ '/js/index.js' | url }}"></script>
  <script type="module" src="{{ '/js/theme-switch.js' | url }}"></script>

  {% if '/blog' in page.url %}
    <link rel="stylesheet" href="{{ 'css/blog-post.css' | url }}">

    <link rel="stylesheet" href="{{ 'css/prism-a11y-rework.css' | url }}">
  {% endif %}

  <meta name="theme-color" content="hsla(281, 56%, 84%, 1)" media="(prefers-color-scheme: light)"/>

  {% include 'layouts/theme-preference.njk' %}

  <style>
    @font-face {
      font-family: "Inter";
      font-style: normal;
      font-weight: 400;
      font-display: swap;
      src: url("fonts/inter-v7-latin-regular.woff2") format('woff2');
      unicode-range: U+0000-00FF, U+02BB-02BC, U+02DA, U+02DC, U+2000-206F, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215;
    }
    @font-face {
      font-family: "Inter";
      font-style: normal;
      font-weight: 500;
      font-display: swap;
      src: url("fonts/inter-v7-latin-500.woff2") format('woff2');
      unicode-range: U+0000-00FF, U+02BB-02BC, U+02DA, U+02DC, U+2000-206F, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215;
    }

    @font-face {
      font-family: "Inter";
      font-style: normal;
      font-weight: 700;
      font-display: swap;
      src: url("fonts/inter-v7-latin-700.woff2") format('woff2');
      unicode-range: U+0000-00FF, U+02BB-02BC, U+02DA, U+02DC, U+2000-206F, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215;
    }
  </style>

  <link rel="icon" href="/favicon.svg"/>
</head>
